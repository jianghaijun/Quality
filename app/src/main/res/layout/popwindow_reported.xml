<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/one_hundred_dp"
    android:layout_height="83dp"
    android:padding="@dimen/one_dp"
    android:background="@drawable/search_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtReported"
        android:layout_width="@dimen/one_hundred_dp"
        android:layout_height="@dimen/forty"
        android:gravity="left|center"
        android:paddingLeft="@dimen/five_dp"
        android:text="@string/query_reported"
        android:textColor="@color/to_upload_photos"
        android:textSize="@dimen/twenty_sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_dp"
        android:background="@color/dark_grey" />

    <TextView
        android:id="@+id/txtCancelReported"
        android:layout_width="@dimen/one_hundred_dp"
        android:layout_height="@dimen/forty"
        android:gravity="left|center"
        android:paddingLeft="@dimen/five_dp"
        android:text="@string/cancel_reported"
        android:textColor="@color/to_upload_photos"
        android:textSize="@dimen/twenty_sp" />
</LinearLayout>
