<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/one_hundred_dp"
        android:text="点击屏幕可手动对焦"
        android:textColor="#C0C0C0"
        android:visibility="visible" />

    <com.sx.quality.view.FinderView
        android:id="@+id/finder_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="center"
        android:layout_marginRight="@dimen/ten_dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_name"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerInParent="true"
                android:background="@drawable/paiz"
                android:visibility="visible" />

            <Button
                android:id="@+id/flashlightBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/fifty_dp"
                android:background="@drawable/zx_code_closelight" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>
